<%- include header %>
<div class="container">
    <div>
        <form class="form-horizontal" method="post" action="/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
            <div class="form-group">
                <label for="inputEmail3" class="control-label  ">标题:</label>
                <div class="">
                    <input type="text" class="form-control" id="inputEmail3" name="titles" value="<%= post.title%>" disabled="disabled">
                </div>
            </div>
            <% if (post.tags){%>
            <div class="form-group">
                <label for="" class="form-control-static col-sm-1" style="">标签:</label>
                <input type="text" class="form-control-static col-sm-1" name="tag1" value="<%= post.tags[0] %>" disabled="disabled"/>
                <input type="text" class="form-control-static col-sm-1" name="tag2" value="<%= post.tags[1] %>" disabled="disabled">
                <input type="text" class="form-control-static col-sm-1" name="tag3" value="<%= post.tags[2] %>" disabled="disabled">
            </div>
            <%}%>
            <div class="form-group">
                <label for="inputPassword3" class="control-label ">内容:</label>
                <div >
                    <textarea type="text" class="form-control" id="inputPassword3" rows="30" name="post" ><%=post.post%></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-10" >
                    <button type="submit" class="btn btn-primary btn-block">保存修改</button>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include footer %>