<%- include header %>
<div class="container">
        <% posts.forEach(function(post,index){ %>
            <div style="border-bottom: 1px solid #d3d3d3;margin-bottom:50px;">
            <h2><a href="/u/<%= post.name %>/<%= post.time.day%>/<%= post.title%>"><%= post.title %></a></h2>
            <p>
                <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head"  width="24" height="24" style="border-radius: 12px;"/></a>
                作者: <a href="/u/<%= post.name %>"><%= post.name%></a>|
                日期: <%= post.time.minute%>
                标签：
                <% if(post.tags){%>
                <% post.tags.forEach(function (tag,index) { %>
                <%if(tag){%>
                <a href="/tags/<%=tag%>"><%=tag%></a>
                <%}%>
                <%})%>
                <%}%>
            </p>
                <hr/>
            <div  class="text-info" style="max-height: 310px;text-overflow:ellipsis;overflow: hidden">
                <%- post.post%>
            </div>
            <span>阅读：<%=post.pv%></span>
                <a href="/u/<%= post.name%>/<%= post.time.day%>/<%= post.title%>">阅读原文</a>
            </div>
            <%})%>

</div>
<%- include paging%>
<%- include footer %>